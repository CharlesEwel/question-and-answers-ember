{{#if questionFormShow}}
  <div class="edit-form">
    <h1>Edit Question</h1>
      <form>
        <div class="form-group">
          <label for="question">Question</label>
          {{input value=question id="question" placeholder = currentQuestion.question}}
        </div>

        <div class="form-group">
          <label for="details">Details</label>
          {{textarea value=details id="details" placeholder=currentQuestion.details}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=currentQuestion.author}}
        </div>
        <button class="btn btn-success" {{action 'editQuestion' currentQuestion}}>Save</button>
      </form>
      <button class="btn btn-warning" {{action 'cancel'}}>Cancel</button>
    </div>
 {{else}}
    <button class="btn btn-info" {{action 'showQuestionForm'}}>Edit Question</button>
{{/if}}
