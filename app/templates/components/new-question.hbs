{{#if questionFormShow}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="question">Question</label>
          {{input value=question id="question"}}
        </div>

        <div class="form-group">
          <label for="details">Details</label>
          {{textarea value=details id="details"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>
        <button {{action 'saveQuestion'}}>Save</button>
      </form>
    </div>
 {{else}}
    <button {{action 'showQuestionForm'}}>New Question</button>
{{/if}}
